.ap
	&-no-ov
		overflow: auto

	// Elements
	&-elements
		height: 100%

		&-panel
			// background-color: $blue
			max-width: 960px
			margin: auto
			padding: 1em

		.ap-header
			margin-bottom: 1em

	&-elms
		margin: 1em 0 4em

		> .ap-tt
			color: $bluelg
			font-style: italic
			font-size: 2em
			margin-bottom: .6em
			border-bottom: .1em solid

// Colores
.ap
	&-clrs
		display: inline-block;
		height: 6em;
		margin-right: 1em;
		vertical-align: middle;
		position: relative
		width: 6em;

		&:before
			background-color: #FFF
			bottom: 0;
			position: absolute;
			text-align: center;
			width: 100%;

		&--blue
			background-color: $blue

			&:before
				content: '$blue'

		&--bluelg
			background-color: $bluelg

			&:before
				content: '$bluelg'

		&--bluebrnd
			background-color: $bluebrnd

			&:before
				content: '$bluebrnd'

		&--yell
			background-color: $yell

			&:before
				content: '$yell'

// Texto
.ap
	&-txt
		&-list
			li
				margin-bottom: 1em



