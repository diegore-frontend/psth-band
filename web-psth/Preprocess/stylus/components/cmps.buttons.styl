// Buttons
.ap
	&-btn
		&-tag
			background-color: rgba(255, 255, 255, .4)
			color: #FFF
			display: block
			border-radius: 1em
			padding: 0.4em
			max-width: 4em
			text-align: center
			border: 1px solid $redf

			&--selected
				background-color: rgba(0, 0, 0, .75)

		&--pay
			border-radius: 1em;
			border: 1px solid $redf;
			color: #FFF
			display: block;
			max-width: 10em;
			padding: .4em 1.8em .4em 1em
			position: relative;
			text-align: center;
			text-transform: uppercase;

			&:before
				line-height: 1.4em;
				margin-right: -4em;
				position: absolute;
				right: 50%;
				color: $redf
